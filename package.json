{
  "name": "markdown-stupefy",
  "displayName": "Markdown Stupefy",
  "description": "Convert smart punctuation to ASCII and remove all emojis from Markdown",
  "version": "0.5.3",
  "publisher": "nanxstats",
  "author": {
    "name": "Nan Xiao"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.78.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nanxstats/vscode-markdown-stupefy"
  },
  "bugs": {
    "url": "https://github.com/nanxstats/vscode-markdown-stupefy/issues"
  },
  "qna": "https://github.com/nanxstats/vscode-markdown-stupefy/discussions",
  "icon": "assets/logo.png",
  "categories": [
    "Programming Languages",
    "Formatters",
    "Other"
  ],
  "keywords": [
    "Markdown",
    "R Markdown",
    "Quarto",
    "SmartyPants",
    "pandoc",
    "AI"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "browser": "./dist/web/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdown-stupefy.stupefy",
        "title": "Stupefy: Convert Smart Punctuation to ASCII"
      },
      {
        "command": "markdown-stupefy.removeEmoji",
        "title": "Stupefy: Remove Emoji Characters"
      },
      {
        "command": "markdown-stupefy.cleanupWhitespace",
        "title": "Stupefy: Cleanup Trailing Whitespace and End of File"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.11",
    "eslint": "^9.38.0",
    "glob": "^11.0.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  }
}